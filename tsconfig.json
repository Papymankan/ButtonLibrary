{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node", // should be "node" to allow standard resolution
    "jsx": "react-jsx",
    "declaration": true, // enable declaration file generation
    "declarationDir": "dist", // output declaration files in dist
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "types": ["node", "vitest/globals", "@testing-library/jest-dom"]
  },
  "include": ["src", "src/**/*.stories.tsx", "src/**/*.stories.mdx"],
  "exclude": ["node_modules", "dist", "**/*.stories.tsx", "**/*.test.tsx"]
}
